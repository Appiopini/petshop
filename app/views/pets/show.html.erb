
<div class="row justify-content-center">
  <div class="col-md-6">
    <p class="h1_title row justify-content-center"><%= @pet.name %></p>
      <table class="row justify-content-center">
          <tr class="h2_text">
            <th>Dono</th>
            <th>Nome</th>
            <th>Ra√ßa</th>
            <th>Cuidados</th>
          </tr>
          <tr class="h3_text">
            <td><%= @pet.owner %></td>
            <td><%= @pet.name %></td>
            <td><%= @pet.race %></td>
            <td><%= @pet.care %></td>
          </tr>
      </table>
