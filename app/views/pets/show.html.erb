          <%= link_to pets_path(@pet) do %>
            <button class="ativo_white">Todos os Pets</button>
          <% end %>
        </div>
        <p></p>
        <div class="row justify-content-center justify-content-sm-around">

          <%= link_to edit_pet_path(@pet) do %>
            <button class="ativo_white">Edit Pet</button>
          <% end %>

          <%= link_to pet_path(@pet), method: :delete, data: { confirm: "Are you sure?" } do %>
            <button class="ativo_white">Remover Pet</button>
          <% end %>
        </div>
  </div>
