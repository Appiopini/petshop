<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Todos os Pets</h1>
    <ul class="list-group">
      <% @pets.each do |pet| %>
        <li class="list-group-item">
          <%= link_to pet.name, pet_path(pet) %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Cadastrar Conta", new_pet_path, class: 'btn btn-primary' %>
  </div>
</div>
