<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="h1_title row justify-content-center">Cadastrar Pet</h1>
      <%= simple_form_for [@pet] do |f| %>
        <div class="row justify-content-sm-around">
          <%= link_to pets_path(@pet) do %>
            <button class="ativo_white">Todos os Pets</button>
          <% end %>

          <%= f.submit "Adiacionar Pet", class: 'ativo_white' %>
        </div>
        <div class="h3_text">
          <%= f.input :owner, label: 'Nome do Dono' %>
          <%= f.input :name, label: 'Nome do Pet' %>
          <%= f.input :race, label: 'RaÃ§a' %>
          <%= f.label :care, label: 'Cuidados' %>
          <%= f.select(:care, options_for_select([['Entrada', 'Entrada'], ['Aguardando', 'Aguardando'], ['Banho', 'Banho'], ['Limpo', 'Limpo']]), { include_blank: true }) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
