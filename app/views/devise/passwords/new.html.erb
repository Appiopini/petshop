<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="h1_title row justify-content-center">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs h2_text">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions row justify-content-center">
        <%= f.button :submit, "Reset password instructions", class: 'ativo_white' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
